      <h2><%= link_to 'DinnerDash', root_path, class: 'text-white d-block nounderline' %></h2>
      <li class="nav-item ml-auto">
      <span class="nav-link text-warning">backoffice</span>
      </li>
      <li class="nav-item">
        <%= link_to 'Perfil', edit_user_registration_path, class: 'nav-link text-white' %>
