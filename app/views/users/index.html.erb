<% if flash[:notice] %>
<p id="notice" class="aler alert-success text-center text-dark m-0 p-2"><%= notice %></p>
<% end %>

<div class="container-fluid position-relative" id="image-backoffice">

  <ul class="nav mt-3">
    <div class="container d-flex">
      <h2><%= link_to 'DinnerDash', root_path, class: 'text-white d-block nounderline' %></h2>
      <li class="nav-item ml-auto">
      <span class="nav-link text-warning">backoffice</span>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Perfil</a>
      </li>
      <li class="nav-item">
        <%= link_to "Sign Out", destroy_user_session_path, :method => :delete, class: 'nav-link text-white' %>
      </li>
    </div>
  </ul>

  <div class="text-white title mb-5">
      <h1>BackOffice</h1>
      <h3>Gerencie pedidos, refeições e mais.</h3>
  </div>

</div>


<nav aria-label="breadcrumb">
  <ol class="breadcrumb bg-dark mb-4">
  <div class="container d-flex">
    <li class="breadcrumb-item text-muted"><a href="#">Pedidos</a></li>
    <li class="breadcrumb-item active text-white" aria-current="page">Usuários</li>
    <li class="breadcrumb-item text-muted"><a href="#">Refeições</a></li>
    <li class="breadcrumb-item text-muted"><a href="#">Categorias de Refeições</a></li>
  </div>
  </ol>
</nav>

<div class="container">

  <table id="table" class="table table-hover">

    <thead class="thead-light">
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Cadastrado em</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
          <% if user.admin? %>
          <span class="badge badge-success mr-1">admin</span>
          <% end %>
          <%= user.name %>
          </td>
          <td><%= user.email %></td>
          <td><%= user.created_at.strftime("%d/%m/%y") %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: 'text-warning' %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  
</div>

