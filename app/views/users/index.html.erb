<%= render "backOffice" %>

<div class="container-fluid bg-dark">
  <div class="container">
    <ul class="nav mb-4">
      <li class="nav-item text-muted"><a class="nav-link" href="#">Pedidos</a></li>
      <li class="nav-item active text-white nav-link" aria-current="page">Usuários</li>
      <li class="nav-item text-muted"><a class="nav-link" href="#">Refeições</a></li>
      <li class="nav-item text-muted"><a class="nav-link" href="#">Categorias de Refeições</a></li>
    </ul>
  </div>
</div>

<div class="container">

  <table id="table" class="table table-hover">

    <thead class="thead-light">
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Cadastrado em</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
          <% if user.admin? %>
          <span class="badge badge-success mr-1">admin</span>
          <% end %>
          <%= user.name %>
          </td>
          <td><%= user.email %></td>
          <td><%= user.created_at.strftime("%d/%m/%y") %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: 'text-warning' %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  
</div>

