<%= render "shared/backOffice_header" %>
<%= render 'shared/backOffice_nav' %>
<p id="notice"><%= notice %></p>

<div class="container pb-3 pt-4">
<table id="table" class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>Nome</th>
      <th>Categoria</th>
      <th>Preço</th>
      <th>Disponivel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.name %></td>
        <td><%= meal.categorium.nome%></td>
        <td><%= meal.price %></td>
        <td><%= meal.available %></td>
        <td><%= link_to 'editar', edit_meal_path(meal) %></td>
        <td><%= link_to 'excluir', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova refeição', new_meal_path , class: 'btn btn-success mr-3 px-4' %>

</div>

<%= render 'shared/footer' %>