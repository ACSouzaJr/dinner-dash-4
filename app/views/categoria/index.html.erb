<%= render "shared/backOffice_header" %>
<%= render 'shared/backOffice_nav' %>

<p id="notice"><%= notice %></p>

<div class="container pb-3 pt-4">
 <table id="table" class="table table-hover">

    <thead class="thead-light">
    <tr>
      <th>Nome</th>
      <th>Número de refeições</th>
      <th>Cadastrado em</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categoria.each do |categorium| %>
      <tr>
        <td><%= categorium.nome %></td>
        <td><%= categorium.numero %></td>
        <td><%= categorium.created_at.strftime("%d/%m/%y")%></td>
        <td><%= link_to 'Editar', edit_categorium_path(categorium) %></td>
        <td><%= link_to 'Deletar', categorium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova categoria de refeição', new_categorium_path , class: 'btn btn-success mr-3 px-4' %>

</div>

<%= render 'shared/footer' %>

