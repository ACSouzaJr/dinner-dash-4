<%= render 'home/header' %>

<div class="container mt-5">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">O seu pedido.</h5>
      <h6 class="card-subtitle mb-3 text-muted">Confira os itens antes de finalizar a compra.</h6>
      <div class="shopping-cart">
        <%= render 'home/shopping_cart' %>
      </div>
      
    </div>
  </div>

</div>

<div class="container py-3">
    <br><hr><br>
    <div class="row">
        <div class="col">
            <h5><strong>Esqueceu algo?</h5></strong>
            <%= link_to "Clique aqui", root_path, class: 'text-primary' %> para retornar ao menu.
        </div>

        <div class="col">
            <h5>Pre√ßo total do pedido: <span class="text-success" id="cart-text"><%= number_to_currency cart_total_price %></span></h5>
            <%= link_to "finalizar e pagar", orders_path(total_price: cart_total_price), method: :POST, class: 'btn btn-success px-5' %>
        </div>
    </div>

    <br><hr>
</div>

