<% if user_signed_in? && current_user.admin? %>
<%= controller.redirect_to users_path  %>
<% end %>

<div class="container-fluid position-relative" id="image-homepage">
  
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-light">
      <%= link_to 'DinnerDash', root_path, class: 'navbar-brand text-white' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse flex-row-reverse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <% if user_signed_in? %>
          <%= link_to 'Perfil', edit_user_registration_path, class: 'nav-item nav-link text-white'  %>
          <%= link_to "Sign Out", destroy_user_session_path, :method => :delete, class: 'nav-item nav-link text-white'  %>
          <% else %>
          <%= link_to "Sign In", new_user_session_path, :method => :get, class: 'nav-item nav-link text-white'  %>
          <%= link_to "Sign up", new_user_registration_path, :method => :get, class: 'nav-item nav-link text-white'  %>
          <% end %>
        </div>
      </div>
    </nav>
  </div>

  <div class="jumbotron text-white title bg-transparent m-0">
    <% if user_signed_in? %>
      <h1>Bem Vindo, <%= current_user.name.capitalize %></h1>
      <h3>Escolha sua salada, molho, prato principal, guarnição e bebida.</h3>
    <% else %>
      <h1>Monte seu prato</h1>
      <h3>Escolha sua salada, molho, prato principal, guarnição e bebida.</h3>
    <% end %>
  </div>

</div>
