<div class="row">
    <div class="col-xs-8">
      <h4><%= product.name %></h4>
    </div>
    <div class="col-xs-4">

      <%= form_for @cart_item, remote: true, method: :patch do |f| %>
        <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency product.price %></span></h4>
        <div class="row">
          <div class="col-xs-4">
            <%= f.number_field :quantity, value: quantity.to_i, class: "form-control", min: 1 %>
            <%= f.hidden_field :meal_id, value: product.id %>
          </div>
          <div class="col-xs-8 text-right">
            <div class="btn-group">
              <% f.submit "Update Quantity", class: "btn btn-primary" %>
              <%= link_to "Delete", order_meals_path(item), { data: { confirm: "Are you sure you wish to delete the product '#{product.name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
            </div>
          </div>
        </div>
        <h4 class="text-right">Total Price: <span style="color: green"><%= number_to_currency (product.price * quantity.to_i) %></span></h4>
        <p><%# cart_total_price %></p>
      <% end %>
    </div>

  </div>