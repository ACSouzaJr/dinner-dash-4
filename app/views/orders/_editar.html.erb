<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 
<div class="row">
    <div class="field col">
       <label>Número</label>
        <input class="form-control" type="text" placeholder="1098768" readonly>
    </div>
    <div class="field col">
        <%= form.label :situation_id, "Status"%>
        <%= collection_select(:order, :situation_id,  @select_situation, :id, :description, {}, {:class=>'form-control'})%>
    </div>
</div>

<br>

<div class="row">
    <div class="field col">
        <%= form.label :created_at %><br />
        <%= form.date_field :created_at, autofocus: true, class: 'form-control', readonly: true %>
    </div>

    <div class="field col">
        <%= form.label :user_id, "Usuário"%>
        <%= form.label order.user.name, autofocus: true, class: 'form-control', readonly: true %>
    </div>
</div>
<br>
<div class="row">
    <div class="field col">
        <%= form.label :price, "Preço total"%>
        <%= form.text_field :price, class: 'form-control', readonly: true%>
    </div>
</div>

<div class="actions buttons-position mt-4">
    <%= form.submit 'atualizar refeição', class: "btn btn-success buttons-new"%> 
    <%= link_to 'voltar', orders_path, class: "btn btn-secondary buttons-new back-position"%>
</div>
<% end %>
