<%= render 'home/header' %>

<div class="container mt-5">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Seu ultimo pedido.</h5>
      <h6 class="card-subtitle mb-3 text-muted">Aguarde seu pedido ser entregue.</h6>
      <div class="container">
        <% @order.order_meals.in_groups_of(3, false) do |group| %>
          <div class="row">
            <% group.each do |order_meal| %>
              <div class="col-sm-4">
                <%= render 'orders/show_row', product: order_meal.meal, quantity: order_meal.quantity %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      
    </div>
  </div>

</div>


<%= render 'carts/pedidos_anteriores' %>
<%= render 'shared/footer' %>