<%= render "shared/backOffice_header" %>
<%= render 'shared/backOffice_nav' %>
<p id="notice"><%= notice %></p>

<div class="container pb-3 pt-4">
<table id="table" class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>Pedido de n</th>
      <th>Status</th>
      <th>Data</th>
      <th>Usuário</th>
      <th>Preço total</th>
      <th>Detalhes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order_meal.order %></td>
        <td><%= order.situation %></td>
        <td><%= order.created_at.strftime("%d/%m/%y")%></td>
        <td><%= order.user %></td>
        <td><%= order.price %></td>
        <td><%= link_to 'editar', edit_order_path(order) %></td>
        <td><%= link_to 'excluir', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo pedido', new_order_path , class: 'btn btn-success mr-3 px-4' %>

</div>

<%= render 'shared/footer' %>