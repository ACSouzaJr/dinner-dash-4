<%= render "shared/backOffice_header" %>
<%= render 'shared/backOffice_nav' %>

<div class="container pb-3 pt-4">

<table class="ctable">
  <thead class="thead-light">
    <tr>
      <th>Pedido de n</th>
      <th>Status</th>
      <th>Data</th>
      <th>Usuário</th>
      <th>Preço total</th>
      <th>Detalhes</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>1098768</td>
        <td>
        <% if order.situation.description == "pendente" %>
            <span class="badge badge-primary mr-1 px-4"><%= order.situation.description %></span>
        <% end %>
        <% if order.situation.description == "entregue" %>
            <span class="badge badge-success mr-1 px-4"><%= order.situation.description %></span>
        <% end %>
        <% if order.situation.description == "cancelado" %>
            <span class="badge badge-danger mr-1 px-4"><%= order.situation.description %></span>
        <% end %>       
        </td>
        <td><%= order.created_at.strftime("%d/%m/%y")%></td>
        <td><%= order.user.name %></td>
        <td><%= number_to_currency order.price, unit: "R$ " %></td>
        <td><button type="button" class="btn btn-link btn-sm" data-toggle="modal" data-target="#myModal">Ver itens pedidos</button></td>
        <td><%= link_to 'editar', edit_order_path(order), class: 'text-warning'%></td>
        <td><%= link_to 'excluir', order, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>

<%= render 'shared/footer' %>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <% if current_cart.empty? %>
          <p class="alert alert-primary text-center"> Carrinho vazio.</p>
        <% else %>
          <% current_cart.each do |item| %>
            <%= render 'home/cart_row', product: Meal.find(item["meal_id"]), quantity: item["quantity"], show_total: true, item: item %>
          <% end %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div> 