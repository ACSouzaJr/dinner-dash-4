
<h1>Categorias</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Número de Refeições</th>
      <th>Criado em</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.amount %></td>
        <td><%= category.created_at %></td>
        <td><%= link_to 'Editar', edit_category_path(category) %></td>
        <td><%= link_to 'Excluir', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova categoria de refeição', new_category_path %>

